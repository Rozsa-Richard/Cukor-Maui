<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CukorMaui.Pages.EditPage"
             Title="EditPage">
    <VerticalStackLayout>
        <Border StrokeShape="RoundRectangle 10" Padding="15" BackgroundColor="#F0F0F0" Margin="0,0,0,10">
            <VerticalStackLayout Spacing="8">
                <Label Text="Add meg a cukor új nevét:"/>
                <Entry x:Name="CandyName"/>
                <Label Text="Add meg a cukor új árát:"/>
                <Entry x:Name="CandyPrice"/>
                <Label Text="Add meg a cukor új raktárát:"/>
                <Entry x:Name="CandyStock"/>
                <Button Text="Módosítás" Clicked="ModifyCandy" BackgroundColor="Green"/>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>